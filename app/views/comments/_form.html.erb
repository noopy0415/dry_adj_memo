<%= form_with model: @comment, local: true, class: 'form-horizontal' do |f| %>

  <%= f.hidden_field :user_id, value:current_user.id %>

  <div class="form-group">
    <%= f.label "題名", class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :title, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "内容", class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_area  :body,     class:"form-control" %>
    </div>
  </div>

  <%= f.hidden_field :end_flag, value:false %>

  <div class="form-group">
    <div class="col-sm-3 control-label"></div>
    <div class="col-sm-9">
      <%= f.submit "投稿", class: "btn btn-primary" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3 control-label"></div>
    <div class="col-sm-9">
      <%= link_to '戻る', root_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
